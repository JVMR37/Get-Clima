<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastroActivity"
    android:background="@drawable/gradient_backgroud">


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="523dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="168dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:ems="13"
            android:hint="@string/hint_nome"
            android:inputType="textPersonName"
            android:textColorHint="@color/fade_out_white" />

        <EditText
            android:id="@+id/edtNovoEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:ems="13"
            android:hint="@string/hint_Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fade_out_white" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:ems="13"
            android:hint="@string/hint_senha"
            android:inputType="textPassword"
            android:textColorHint="@color/fade_out_white" />

        <EditText
            android:id="@+id/edtConfirmaSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:ems="13"
            android:hint="@string/hint_Csenha"
            android:inputType="textPassword"
            android:textColorHint="@color/fade_out_white" />

        <Button
            android:id="@+id/btnSalvarMudancas"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/ligth_yellow"
            android:onClick="cadastrarUsuario"
            android:text="@string/btnSalvar" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

