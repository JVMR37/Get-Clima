<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_principal">


    <Spinner
        android:id="@+id/spnrCidades"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentStart="true"
        android:dropDownVerticalOffset="40dp"/>

    <Spinner
        android:id="@+id/spnrEstados"
        android:layout_width="99dp"
        android:layout_height="75dp"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:layout_alignParentEnd="true"
        android:dropDownVerticalOffset="40dp" />

    <ListView
        android:id="@+id/lvCidades"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_below="@+id/spnrCidades"
        android:layout_marginTop="103dp" />

    <TextView
        android:id="@+id/txtAddCidade"
        android:layout_width="275dp"
        android:layout_height="36dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:ems="20"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/ibtnAddCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:layout_marginStart="325dp"
        app:srcCompat="@drawable/ic_add"
        android:backgroundTint="@color/transparente"/>

</RelativeLayout>